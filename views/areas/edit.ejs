<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Area </h1>
        <div style="width: 60%; margin: 35px auto;">
            <form action="/area/<%= area._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="">Area Name</label>
                    <input class="form-control" type="text" name="area[name]" value="<%= area.name %> " />
                </div>
                <div class="form-group">
                    <label for="">Location</label>
                    <input class="form-control" type="text" name="area[location]" value="<%= area.location %> " />
                </div>
                <div class="form-group">
                    <label for="">Image</label>
                    <input class="form-control" type="text" name="area[image]" value="<%= area.image %> " />
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <textarea class="form-control" name="area[description]" cols="30"
                        rows="5"><%= area.description %> </textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" />
                </div>
            </form>
            <a href="/area">Go Back</a>
        </div>

    </div>
</div>
<%- include("../partials/footer") %>