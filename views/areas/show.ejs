<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"><a style="text-decoration: none;" href="/area">Back to view all areas</a></p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= area.image %> " alt="">
                <div class="caption-full">
                    <% if(area.location) { %>
                    <h5 style="color: teal;" class="pull-right">Location: <%= area.location %> </h5>
                    <% } %>
                    <h4><a href=""><%= area.name %> </a></h4>
                    <div class="pull-right">
                        <button type="button" class="btn btn-xs btn-primary" data-toggle="modal"
                            data-target="#areaLikes">
                            <span>Total likes: <i class="fas fa-thumbs-up"></i>
                                <%= area.likes.length %></span>
                        </button>
                    </div>
                    <div style="padding-bottom: 10px;">
                        <form action="/area/<%= area._id %>/like" method="POST">
                            <div class="btn-group">
                                <% if (currentUser && area.likes.some(function (like) {
                                    return like.equals(currentUser._id)
                                })) { %>
                                <button class="btn btn-sm btn-primary">
                                    <i class="fas fa-thumbs-up"></i> Liked (<%= area.likes.length %>)
                                </button>
                                <% } else { %>
                                <button class="btn btn-sm btn-secondary">
                                    <i class="fas fa-thumbs-up"></i> Like (<%= area.likes.length %>)
                                </button>
                                <% } %>
                                <button type="button" class="btn btn-sm btn-default" data-toggle="modal"
                                    data-target="#areaLikes">See more details
                                </button>
                            </div>
                        </form>
                    </div>
                    <p><%= area.description %> </p>
                    <p>
                        <em>Submitted by: <a class="anchortag"
                                href="/users/<%= area.user.id %> "><%= area.user.username %></a>,
                            <%= moment(area.createdAt).fromNow() %></em>
                    </p>
                    <% if(currentUser && area.user.id.equals(currentUser._id) || (currentUser && currentUser.isAdmin)){ %>
                    <a class="btn btn-warning" href="/area/<%= area._id %>/edit ">Edit</a>
                    <form style="display: inline-block;" action="/area/<%= area._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <!--Setting up the add new comment button that is used for collapsing-->
                <div class="text-right">
                    <a class="btn btn-success pull-right" role="button" data-toggle="collapse" href="#collapseComment"
                        aria-expanded="false" aria-controls="collapseComment">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new comment</a>
                </div>
                <!--Comment section title-->
                <h4>
                    <strong>Comments <span class="glyphicon glyphicon glyphicon-comment"
                            aria-hidden="true"></span></strong>
                </h4>
                <!--Collapse Add a comment form START-->
                <div class="collapse" id="collapseComment">
                    <div class="well" style="border-left: 5px solid #00C851;">
                        <% if(!currentUser) { %>
                        <!--If the user is not logged in, direct him to the login page-->
                        <h5>You need to login before you can comment. <a href="/login">Click here</a> to go to the login
                            page.</h5>
                        <% } %>
                        <% if(currentUser) { %>
                        <!--If the user is logged in, show the new comment form-->
                        <h4>Write your comment <span class="glyphicon glyphicon glyphicon-pencil"
                                aria-hidden="true"></span></h4>
                        <form id="add-comment-form" action="/area/<%= area._id %>/comments" method="POST">
                            <div class="form-group">
                                <input class="form-control" type="text" disabled value="<%= currentUser.username %>">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="comment[text]" placeholder="Write your comment..."
                                    form="add-comment-form" rows="5" cols="70"></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-sm">Comment <span class="glyphicon glyphicon-comment"
                                        aria-hidden="true"></span></button>
                            </div>
                        </form>
                        <% } %>
                    </div>
                </div>
                <!--Collapse Add a comment form END-->
                <hr>

                <!--Check if there are comments, if there are none say no comments.-->
                <% if (area.comments.length === 0) { %>
                <em style="color: grey;">No comments yet.</em>
                <% } %>

                <%  area.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong>
                            <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
                            <!--If the current user owns the comment, change the color of the user icon-->
                            <img style="width: 50px; height: 50px; display: inline-block;"
                                class="img-responsive img-circle" src="<%= comment.author.avatar %>">
                            <% } else { %>
                            <!--Else just display it black-->
                            <img style="width: 50px; height: 50px; display: inline-block;"
                                class="img-responsive img-circle" src="<%= comment.author.avatar %>">
                            <% } %>
                            <!--Print out the author username-->
                            <%= comment.author.username %>
                        </strong>
                        <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                        <p>
                            <%= comment.text %>
                        </p>

                        <% if((currentUser && comment.author.id.equals(currentUser._id)) || (currentUser && currentUser.isAdmin)){ %>
                        <!--Edit button used for collapsing the edit comment form-->
                        <a class="btn btn-xs btn-warning" role="button" data-toggle="collapse" href="#collapseEdit"
                            aria-expanded="false" aria-controls="collapse<%= comment._id %>">
                            Edit
                        </a>
                        <form style="display: inline-block;"
                            action="/area/<%= area._id %>/comments/<%= comment.id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-xs"
                                href="/area/<%= area._id %>/comments/<%= comment.id %>">Delete
                            </button>
                        </form>
                        <div class="collapse" id="collapseEdit">
                            <div class="well" style="border-left: 5px solid #ffbb33;">
                                <h4>Edit your comment <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </h4>
                                <form id="edit-comment-form<%= comment._id %>"
                                    action="/area/<%= area._id %>/comments/<%= comment._id %>?_method=PUT"
                                    method="POST">
                                    <div class="form-group">
                                        <input class="form-control" type="text" disabled
                                            value="<%= currentUser.username %>">
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" name="comment[text]"
                                            placeholder="Your comment text..."
                                            form="edit-comment-form<%= comment._id %>" rows="5"
                                            cols="70"><%= comment.text %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-warning btn-sm">Edit comment <span
                                                class="glyphicon glyphicon-comment" aria-hidden="true"></span></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <hr>
                <%  }) %>
            </div>
        </div>
    </div>
</div>


<!-- area Likes Modal -->
<div id="areaLikes" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Area likes: <%= area.likes.length %></h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Liked by:</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% area.likes.forEach(function(like) { %>
                        <tr>
                            <td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
                        </tr>
                        <% }); %>
                        <% if (area.likes.length === 0) { %>
                        <tr>
                            <td><em>No likes yet.</em></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>