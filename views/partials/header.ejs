    <title>Chennai City</title>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Chennai</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <%  if(!currentUser ){ %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Sign Up</a></li>
                    <%  } else  { %>
                    <% if(currentUser.isAdmin){ %>
                    <li><a href="/users/<%= currentUser.id %>">logged in as <%= currentUser.username %>(Admin)</a></li>
                    <% } else { %>
                    <li><a href="/users/<%= currentUser.id %>">logged in as <%= currentUser.username %></a></li>
                    <% } %>
                    <li><a href="/logout">Logout</a></li>
                    <%  }  %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <% if(success && success.length>0) { %>
        <div class="alert alert-success" role="alert"><%= success %></div>
        <% } if(error && error.length>0){ %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>
    </div>