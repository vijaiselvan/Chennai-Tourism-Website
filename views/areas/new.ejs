<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Area</h1>
        <div style="width: 60%; margin: 35px auto;">
            <form action="/area" method="POST">
                <div class="form-group">
                    <label for="">Area Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Area name" required />
                </div>
                <div class="form-group">
                    <label for="">Location</label>
                    <input class="form-control" type="text" name="location" placeholder="location" required />
                </div>
                <div class="form-group">
                    <label for="">Image</label>
                    <input class="form-control" type="text" name="image" placeholder="image url" required />
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <textarea class="form-control" name="description" cols="30" rows="5"
                        placeholder="write down the description of the place"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" />
                </div>
            </form>
            <a href="/area">Go Back</a>
        </div>

    </div>
</div>
<%- include("../partials/footer") %>