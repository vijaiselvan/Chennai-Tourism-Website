<%- include('../partials/header') %>

<div class="container">
    <div id="container">
        <div class="form-wrap">
            <h1>Edit Your Profile</h1>
            <form action="/users/<%= user.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="">First Name</label>
                    <input class="form-control" type="text" name="firstName" value="<%= user.firstName %> ">
                </div>
                <div class="form-group">
                    <label for="">Last Name</label>
                    <input class="form-control" type="text" name="lastName" value="<%= user.lastName %> ">
                </div>
                <div class="form-group">
                    <label for="">Avatar</label>
                    <input class="form-control" type="text" name="avatar" value="<%= user.avatar %> ">
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input class="form-control" type="email" name="email" value="<%= user.email %> ">
                </div>
                <div class="form-group">
                    <label for="">Admin Code</label>
                    <input class="form-control" type="text" name="adminCode">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" />
                </div>

            </form>
            <a href="/area">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>